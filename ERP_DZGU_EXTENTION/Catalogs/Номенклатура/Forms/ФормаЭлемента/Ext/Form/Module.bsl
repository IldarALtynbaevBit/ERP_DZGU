    ДобавляемыеРеквизиты.Добавить(НовыйРеквизит);
	
	ТипыРеквизита = Новый Массив;
    ТипыРеквизита.Добавить(Тип("Булево"));
    ОписаниеТиповДляРеквизита = Новый ОписаниеТипов(ТипыРеквизита);
    НовыйРеквизит = Новый РеквизитФормы("СКолес", ОписаниеТиповДляРеквизита,, 
    "СКолес",Истина);
    ДобавляемыеРеквизиты.Добавить(НовыйРеквизит);
    ИзменитьРеквизиты(ДобавляемыеРеквизиты);
    
    НовыйЭлемент = Элементы.Добавить("БИТ_ТребуетсяВнутренняяСертификация", Тип("ПолеФормы"),Элементы.АртикулКодШтрихкод);  
    НовыйЭлемент.ПутьКДанным = "Объект.БИТ_ТребуетсяВнутренняяСертификация";
    НовыйЭлемент.Вид = ВидПоляФормы.ПолеФлажка;
	НовыйЭлемент.УстановитьДействие("ПриИзменении","БИТ_ТребуетсяВнутренняяСертификация_ПриИзменении");
	
	НовыйЭлемент = Элементы.Добавить("БИТ_СКолес", Тип("ПолеФормы"),Элементы.АртикулКодШтрихкод);  
    НовыйЭлемент.ПутьКДанным = "Объект.БИТ_СКолес";
    НовыйЭлемент.Вид = ВидПоляФормы.ПолеФлажка;
	Если НЕ Объект.БИТ_ТребуетсяВнутренняяСертификация Тогда
		НовыйЭлемент.Видимость = Ложь;
	КонецЕсли;

КонецПроцедуры

